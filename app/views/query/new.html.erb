<div class="container">
  <div class="row mgTp">
    <%= form_with model: @query, url: query_index_path do |f| %>

      <h3 class="title">Add a question</h3>
      <hr class="divisor">

      <div class="field form-group">
        <%= f.label :question %><br />
        <%= f.text_field :question, autofocus: true, class: "form-control", required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Create Question", class: "btn btn-primary topBtn" %>
      </div>
    <% end %>

  </div>
</div>