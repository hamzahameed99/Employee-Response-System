<h3>Engin Technologies Performance Review Form</h3>
  <table class="table table-hover table-striped">
    <thead class="table-dark">
    <tr>
      <th>Question</th>
      <th colspan="1"></th>
    </tr>
    </thead>

      <tbody>
      <% @question.each do |quest| %>
        <tr>
          <td><%= quest.question %></td>
          <td><%= link_to "Delete", quest, method: :delete, data: { confirm: "Are you sure"}, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
  </table>

<%= link_to 'Add new question', add_question_path %>


