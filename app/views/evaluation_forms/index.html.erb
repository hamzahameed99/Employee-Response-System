<h1>Review Forms</h1>

<% if current_user.role == "HR" %>
<table class="table table-striped table-hover">
  <thead class="thead-dark ">
  <tr>
    <th>Comment</th>
    <th>Submit By</th>
  </tr>
  </thead>
  <tbody>

    <% @evaluation_form.each do |ef| %>
      <tr>
        <td><%= ef.comment %></td>
        <td><%= ef.submit_by %></td>
        <td><%= link_to "Delete",ef, method: :delete,data: { confirm: "Really delete this user?" }, class: "btn btn-danger" %></td>
        <td><%= link_to "Open form", evaluation_forms_show_path(id: ef), class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <% elsif current_user.role == "Employee" %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark ">
    <tr>
      <th>Comment</th>
      <th>Submit By</th>
    </tr>
    </thead>
    <tbody>

    <% @evaluation_form.each do |ef| %>

      <% if ef.user_id == current_user.id %>
      <tr>
        <td><%= ef.comment %></td>
        <td><%= ef.submit_by %></td>
      </tr>
    <% end %>
      <% end %>
    </tbody>
  </table>
  <% end %>

<%= link_to 'Back',  home_index_path, class:"nav-link" %>