<h2>Sign up</h2>

<%= form_with model: @user, url: signup_path do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :cnic %><br/>
    <%= f.text_field :cnic %>
  </div>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :joining_date %><br/>
    <%= f.date_select :join_date %>
  </div>
  <div class="field">
    <%= f.label :role %><br/>
    <%= f.select(:role, [['Manager'], ['Employee']] ) %>
  </div>
  <div class="field">
    <%= f.label :managerid %><br/>
    <%= f.text_field :manager_id %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Create user" %>
  </div>
<% end %>